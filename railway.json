{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "npm start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "variables": {
        "PORT": "3000",
        "NODE_ENV": "production",
        "JWT_SECRET": "replace-this-with-a-secure-random-string-in-railway-dashboard"
    }
}